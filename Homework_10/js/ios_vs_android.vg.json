{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "An interactive world map supporting pan and zoom.",
  "width": 800,
  "height": 400,
  "autosize": "none",

  "signals": [
    { "name": "tx", "update": "width / 2" },
    { "name": "ty", "update": "height / 2" },
    {
      "name": "scale",
      "value": 200,
      "on": [{
        "events": {"type": "wheel", "consume": true},
        "update": "clamp(scale * pow(1.0005, -event.deltaY * pow(16, event.deltaMode)), 150, 3000)"
      }]
    },
    {
      "name": "angles",
      "value": [0, 0],
      "on": [{
        "events": "mousedown",
        "update": "[rotateX, rotateY]"
      }]
    },
    {
      "name": "cloned",
      "value": null,
      "on": [{
        "events": "mousedown",
        "update": "copy('projection')"
      }]
    },
    {
      "name": "start",
      "value": null,
      "on": [{
        "events": "mousedown",
        "update": "invert(cloned, xy())"
      }]
    },
    {
      "name": "drag", "value": null,
      "on": [{
        "events": "[mousedown, window:mouseup] > window:mousemove",
        "update": "invert(cloned, xy())"
      }]
    },
    {
      "name": "delta", "value": null,
      "on": [{
        "events": {"signal": "drag"},
        "update": "[drag[0] - start[0], start[1] - drag[1]]"
      }]
    },
    {
      "name": "rotateX", "value": 1,
      "on": [{
        "events": {"signal": "delta"},
        "update": "angles[0] + delta[0]"
      }]
    },
    {
      "name": "rotateY", "value": 0,
      "on": [{
        "events": {"signal": "delta"},
        "update": "clamp(angles[1] + delta[1], -85, 85)"
      }]
    }
  ],

  "projections": [
    {
      "name": "projection",
      "type": "orthographic",
      "scale": {"signal": "scale"},
      "rotate": [{"signal": "rotateX"}, {"signal": "-rotateY"}, 0],
      "center": [0, 0],
      "translate": [{"signal": "tx"}, {"signal": "ty"}]
    }
  ],

  "data": [
    {
      "name": "graticule",
      "url": "../Homework_10/js/mapbase.json",
      "format": {
        "type": "topojson",
        "feature": "ne_110m_graticules_30"
      }
    },
    {
      "name": "oceans",
      "url": "../Homework_10/js/mapbase.json",
      "format": {
        "type": "topojson",
        "feature": "ne_110m_ocean"
      }
    },
    {
      "name": "world",
      "url": "../Homework_10/js/mapbase.json",
      "format": {
        "type": "topojson",
        "feature": "ne_110m_admin_0_countries"
      }
    },
    {
      "name": "market_share_by_country",
      "url": "../Homework_10/Data/iphone-market-share-by-country-2023.csv"
    },
    {
      "name": "phones_by_country",
      "url": "../Homework_10/Data/cell-phones-by-country-2023.csv"
    },
    {
      "name": "countries-lat-long",
      "url": "../Homework_10/Data/average-latitude-longitude-countries.csv"
    }
  ],
  "transform":[
    {
      "calculate": "datum.iosMarketShare > datum.androidMarketShare ? 'IOS' : 'Android'",
      "as": "Market Dominator"
    },
    {
      "calculate": "datum.iosMarketShare > datum.androidMarketShare ? datum.iosMarketShare : datum.androidMarketShare",
      "as": "market leader value"
    }
  ],
  "marks": [
    {
      "type": "shape",
      "from": {"data": "graticule"},
      "encode": {
        "enter": {
          "strokeWidth": {"value": 1},
          "stroke": {"value": "lightgray"},
          "fill": {"value": null}
        }
      },
      "transform": [
        { "type": "geoshape", "projection": "projection" }
      ]
    },
    {
      "type": "shape",
      "from": {"data": "oceans"},
      "encode": {
        "enter": {
          "fill": {"value": "skyblue"},
          "opacity":{"value": 0.5}
        }
      },
      "transform": [
        { "type": "geoshape", "projection": "projection" }
      ]
    },
    {
      "type": "shape",
      "from": {"data": "world"},
      "encode": {
        "enter": {
          "strokeWidth": {"value": 0.3},
          "stroke": {"value": "black"},
          "fill": {"value": "#e5e8d3"}
        }
      },
      "transform": [
        { "type": "geoshape", "projection": "projection" }
      ]
    }
  ]
}
