{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Market share between IOS vs Android 2023",
  "width": 800,
  "height": 400,
  "params": [
    {
      "name": "zoom_level",
      "value": 140,
      "bind": {
        "input": "range",
        "min": 140,
        "max": 1000,
        "step": 1,
        "name": "Zoom: "
      }
    },
    {
      "name": "center_to",
      "value": [
        0,
        0
      ],
      "bind": {
        "input": "select",
        "options": [
          [0, 0],
          [7.449624, 15.719247],
          [53.919408  ,85.619606],
          [56.134075  ,15.533798],
          [49.344586  ,-102.777709],
          [-19.585854 ,-60.477626]
        ],
        "labels": [
          "Global",
          "Africa",
          "Asia",
          "Europe",
          "North America",
          "South America"
        ],
        "name": "Map Centre: "
      }
    }
  ],
  "projection": {
    "type": "equirectangular",
    "center": {
      "expr": "center_to"
    },
    "scale": {
      "expr": "zoom_level"
    }
  },
  "data": {
    "url": "https://raw.githubusercontent.com/tinker23r/FIT3179-public/main/Homework_9/js/ne_110m_admin_0_countries.topojson",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_0_countries"
    }
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tinker23r/FIT3179-public/main/Homework_9/js/oceans.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue",
        "opacity": 0.5
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/tinker23r/FIT3179-public/main/Homework_9/js/WorldMapWithGraticules.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgray"
      }
    },
    {
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.3,
        "fill": "white"
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/tinker23r/FIT3179-public/main/Homework_9/Data/iphone-market-share-by-country-2023.csv"
            },
            "key": "country",
            "fields": [
              "iosMarketShare",
              "androidMarketShare",
              "pop2023"
            ]
          }
        },
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/tinker23r/FIT3179-public/main/Homework_9/Data/cell-phones-by-country-2023.csv"
            },
            "key": "country",
            "fields": [
              "numUsers",
              "linesPer100",
              "pop2023"
            ]
          }
        },
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/tinker23r/FIT3179-public/main/Homework_9/js/average-latitude-longitude-countries.csv"
            },
            "key": "Country",
            "fields": [
              "Latitude",
              "Longitude"
            ]
          }
        },
        {
          "calculate": "datum.iosMarketShare > datum.androidMarketShare ? 'IOS' : 'Android'",
          "as": "Market Dominator"
        },
        {
          "calculate": "datum.iosMarketShare > datum.androidMarketShare ? datum.iosMarketShare : datum.androidMarketShare",
          "as": "market leader value"
        }
      ],
      "mark": {
        "type": "circle",
        "opacity": 0.6
      },
      "encoding": {
        "tooltip": [
          {
            "field": "properties.NAME",
            "title": "Country"
          },
          {
            "field": "iosMarketShare",
            "type": "quantitative",
            "title": "IOS Market Share"
          },
          {
            "field": "androidMarketShare",
            "type": "quantitative",
            "title": "Android Market Share"
          },
          {
            "field": "numUsers",
            "title": "Total Smartphones"
          }
        ],
        "color": {
          "field": "Market Dominator",
          "type": "nominal",
          "scale": {
            "domain": [
              "IOS",
              "Android"
            ],
            "range": [
              "#af8dc3",
              "#008000"
            ]
          }
        },
        "opacity": {
          "field": "market leader value",
          "type": "quantitative",
          "scale": {
            "domain": [
              50,
              100
            ],
            "range": [
              0.25,
              0.95
            ]
          },
          "title": "% of Market"
        },
        "latitude": {
          "field": "Latitude",
          "type": "quantitative"
        },
        "longitude": {
          "field": "Longitude",
          "type": "quantitative"
        },
        "size": {
          "legend": null,
          "field": "numUsers",
          "type": "quantitative",
          "scale": {
            "type": "sqrt",
            "domain": [
              0,
              100
            ],
            "range": [
              0,
              1
            ]
          }
        }
      }
    }
  ]
}