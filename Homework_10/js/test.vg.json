{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Map",
  "width": 800,
  "height": 400,
  "params": [
    {
      "name": "selected_continent",
      "value": "Oceania",
      "bind": {
      "input": "select",
      "options": ["Africa", "Asia", "Europe", "North America", "Oceania", "South America"],
      "name": "Continent: "
      }
    }
  ],
  "data": {
    "url": "../Homework_10/Data/Market_Share.csv"
  },
  "transform": [
    {"filter": "datum.Continent == selected_continent"}
  ],
  "mark": "bar",
  "encoding": {
    "x": {
      "aggregate": "sum", "field": "MarketShare",
      "title": "Smartphones",
      "stack":"normalize"
    },
    "y": {"field": "Country"},
    "tooltip": [
      {
        "field": "Country",
        "title": "Country"
      },
      {
        "field": "MarketShare",
        "type": "quantitative",
        "title": "Market Share (%)"
      },
      {
        "field": "numUsers",
        "title": "Total Smartphones"
      }
    ],
    "color": {
      "field": "OperatingSystem",
      "type": "nominal",
      "scale": {
        "domain": ["Android", "IOS","Other"],
        "range": ["#498d00", "#E0BFB8 ","#808080"]
      }
    }
  }
}