{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Market share between IOS vs Android 2023",
  "width": 800,
  "height": 400,
  "projection": {
    "type": "equalEarth"
  },
  "data": {
    "url": "ne_110m_admin_0_countries.topojson",
    "format": {
      "type": "topojson",
      "feature": "ne_110m_admin_0_countries"
    }
  },
  "layer": [
    {
      "data": {
        "url": "oceans.topojson",
        "format": {
          "type": "topojson",
          "feature": "oceans"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "skyblue"
      }
    },
    {
      "data": {
        "url": "WorldMapWithGraticules.topojson",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_graticules_30"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": null,
        "stroke": "lightgray"
      }
    },
    {
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.3,
        "fill": "lightgrey"
      }
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "..\\Data\\iphone-market-share-by-country-2023.csv"
            },
            "key": "country",
            "fields": [
              "iosMarketShare",
              "androidMarketShare",
              "pop2023"
            ]
          }
        },
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "..\\Data\\cell-phones-by-country-2023.csv"
            },
            "key": "country",
            "fields": [
              "numUsers",
              "linesPer100",
              "pop2023"
            ]
          }
        },
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "average-latitude-longitude-countries.csv"
            },
            "key": "Country",
            "fields": [
              "Latitude",
              "Longitude"
            ]
          }
        },
        {
          "calculate": "datum.iosMarketShare > datum.androidMarketShare ? 'IOS' : 'Android'",
          "as": "Market Dominator"
        },
        {
          "calculate": "datum.iosMarketShare > datum.androidMarketShare ? datum.iosMarketShare : datum.androidMarketShare",
          "as": "market leader value"
        }
      ],
      "mark": {
        "type": "circle",
        "opacity": 0.6
      },
      "encoding": {
        "tooltip": [
          {
            "field": "properties.NAME",
            "title": "Country"
          },
          {
            "field": "iosMarketShare",
            "type": "quantitative",
            "title": "IOS Market Share"
          },
          {
            "field": "androidMarketShare",
            "type": "quantitative",
            "title": "Android Market Share"
          },
          {
            "field": "numUsers",
            "title": "Total Smartphones"
          }
        ],
        "color": {
          "field": "Market Dominator",
          "type": "nominal",
          "scale": {
            "domain": [
              "IOS",
              "Android"
            ],
            "range": [
              "#FF5733",
              "#008000"
            ]
          }
        },
        "opacity": {
          "field": "market leader value",
          "type": "quantitative",
          "scale": {
            "domain": [50, 100],
            "range": [0.25,0.95]
          },
          "title": "% of Market"
        },
        "latitude": {
          "field": "Latitude",
          "type": "quantitative"
        },
        "longitude": {
          "field": "Longitude",
          "type": "quantitative"
        },
        "size": {
          "legend": null,
          "field": "numUsers",
          "type": "quantitative",
          "scale": {
            "type": "sqrt",
            "domain": [
              0,
              100
            ],
            "range": [
              0,
              1
            ]
          }
        }
      }
    }
  ]
}