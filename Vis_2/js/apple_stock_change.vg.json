{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Google's stock price over time.",
  "data": {
    "url": "../Data/Apple_Stock.csv"
  },
  "vconcat": [{
    "width": 600,
    "height": 300,
    "mark": "line",
    "encoding": {
      "x": {
        "field": "Date",
        "type": "temporal",
        "timeUnit": "yearmonthdate",
        "scale": {"domain": {"param": "brush"}},
        "axis": {"title": ""}
      },
      "y": {
        "field": "Open", 
        "type": "quantitative", 
        "title": "Market Cap (Billions)"
      }
    }
  }, {
    "width": 600,
    "height": 100,
    "mark": "area",
    "params": [{
      "name": "brush",
      "select": {"type": "interval", "encodings": ["x"]}
    }],
    "encoding": {
      "x": {
        "field": "Date",
        "type": "temporal",
        "timeUnit": "yearmonthdate"
      },
      "y": {
        "title": "% Change",
        "field": "Change",
        "type": "quantitative",
        "axis": {"tickCount": 3, "grid": false}
      }
    }
  }]
}